import matplotlib
import matplotlib.pyplot as plt
from scipy.integrate import odeint
import numpy as np

def calculate(r):
	# this is x2
	initial = .02
	array = []
	for x in range(100):
		initial = r * initial * (1 - initial)
		array.append(initial)

	print(array)

	plt.plot(array)
	plt.show()
	return

var = 1
while var == 1:
	r = float(input("what is the value of r: "))
	if (r == 10):
		break
	calculate(r)
